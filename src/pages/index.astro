---
// components
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// styles
import "../styles/pages/_index.scss";
---

<Layout
  title="Ecliptic Creative Agency - Home"
  description="A full service creative agency based in Addis Ababa, Ethiopia, and serving clients worldwide."
>
  <Header />
  <main>
    <section class="hero-section">
      <div class="container wrapper">
        <div class="hero-text">
          <div class="section-label">
            Website Design <span style="color: #8e8b7e64; margin-inline: 2px;"
              >|</span
            > Branding <span style="color: #8e8b7e64; margin-inline: 2px;"
              >|</span
            > Digital Marketing
          </div>
          <h1 class="font-header-1 text-center">
            We Offer Digital Solutions with a <span class="highlight-bg"
              ><span class="highlight-text">Modern</span></span
            > Outlook
          </h1>
        </div>
      </div>
      <div class="three-wrapper">
        <div class="three-overlay"></div>
      </div>
    </section>
  </main>

  <script src="../scripts/script.js"></script>
</Layout>
